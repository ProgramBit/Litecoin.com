       <script>
        $(document).ready(function(){
            $('.btn-field').click(function(e){
              	e.preventDefault();
				$("#alert").css("display", "none");
				$.getJSON("task/?task=supportMessage&name="+$("#name").val()+"&email="+$("#email").val()+"&message="+$("#msg").val(), function(result){
				  if(result['error']==true){
					 $("#alert").html(result['error_msg']);
					 $("#alert").removeClass("alert alert-success").addClass("alert alert-danger");
					 $("#alert").css("display", "");
				  }else{
					  $("#alert").html(result['response']);
					  $("#alert").removeClass("alert alert-danger").addClass("alert alert-success");
					  $("#alert").css("display", "");
				  }
				});
            });
        });
    </script>
